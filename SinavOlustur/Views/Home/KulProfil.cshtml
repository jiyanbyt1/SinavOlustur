
@{
    ViewData["Title"] = "KulProfil";
    Layout = "~/Views/Shared/KullaniciLayout.cshtml";
}

<h4>@Fonksiyonlar.AdSoyad Hoşgeldin. Profil Bilgileri için 'Düzenle' butonuna tıklayın.</h4>
<button onclick="document.getElementById('id01').style.display='block'" style="width:auto;">Düzenle</button>

<div id="id01" class="modal">

    <form class="modal-content animate" action="/Home/KulProfil1" method="post">
        <div class="imgcontainer">
            <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
            <img src="img_avatar2.png" alt="Avatar" class="avatar">
        </div>

        <div class="container">
            <label for="name"><b>Adınız Ve Soyadınız:</b></label>
            <input type="text" placeholder="Ad Soyad" name="name" id="name" value="@ViewBag.name" required>

            <label for="email"><b>Email Adresiniz:</b></label>
            <input type="text" placeholder="Email" name="email" id="email" value="@ViewBag.email" required>

            <label for="sifre"><b>Şifreniz:</b></label>
            <input type="password" placeholder="Enter Password" name="sifre" id="sifre" value="@ViewBag.sifre" required>

            <input type="checkbox" onclick="myFunction()" />
            <label>Şifreyi Göster</label>

            <button type="submit">KAYDET</button>

        </div>

        <div class="container" style="background-color:#f1f1f1">
            <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">İPTAL</button>
        </div>
    </form>
</div>
<script src="~/jquery-3.3.1.min.js"></script>
<script>
    // Get the modal
    var modal = document.getElementById('id01');

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>

<script>
    function myFunction() {
        var x = document.getElementById("sifre");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>